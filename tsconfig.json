{
	"compilerOptions": {
		"target": "esnext",
		"module": "commonjs",
		"jsx": "preserve",
		"declaration": true,
		"strict": true,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"noEmit": true,
		"noImplicitAny": false,
		"skipLibCheck": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"isolatedModules": false,
		"plugins": [{ "name": "typescript-plugin-tw-template" }],
		"baseUrl": ".",
		"paths": {
			"~/*": ["./src/*"]
		}
	},
	"exclude": ["node_modules", "public", ".cache"]
}
